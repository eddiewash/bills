<div>
	<h1>Payments</h1>
</div>

<b>Total Payments: <b><%= number_to_currency(@invoice.total_payments) %><br/><br/>

<table class="table table-hover">
  <tr>
    <th>Payment Date</th>
    <th>Payment Post Date</th>
    <th>Amount</th>
    <th>Notes</th>

  </tr>

<% @invoice.payments.each do |p| %>
  <tr data-link="<%= edit_invoice_payment_path(p) %>">
    <td><%= (p.payment_date).strftime("%m/%d/%Y") if p.payment_date? %></td>
    <td><%= (p.updated_at).strftime("%m/%d/%Y") %></td>
    <td><%= number_to_currency(p.amount) %></td>
    <td><%= p.note %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Back', invoice_path(@invoice), :class => 'btn' %>

