<div>
	<h1>Clients</h1>
</div>

<table class="table table-hover">
  <tr>
    <th>Client name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Address</th>

  </tr>

<% @clients.each do |client| %>
  <tr data-link="<%= client_path(client) %>">
    <td><%= client.client_name %></td>
    <td><%= client.email %></td>
    <td><%= number_to_phone(client.phone) %></td>
    <td><%= client.address.gsub(/\n/, '<br/>').html_safe %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add a New Client', new_client_path, :class => 'btn' %>
