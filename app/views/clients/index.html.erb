<div class="page-header">
	<h1>Clients</h1>
</div>

<table>
  <tr>
    <th>Client name</th>
    <th>City</th>
    <th>State</th>
    <th></th>

  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%= client.client_name %></td>
    <td><%= client.city %></td>
    <td><%= client.state %></td>
    <td><%= link_to 'Show', client %> |
    <%= link_to 'Edit', edit_client_path(client) %> |
    <%= link_to 'Destroy', client, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

