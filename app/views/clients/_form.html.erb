<%= simple_form_for(@client, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  
  <%= f.input :client_name %>
  <%= f.input :poc, :label => "Point of Contact" %>
  <%= f.input :phone %>
  <%= f.input :email %>
  <%= f.input :address1 %>
  <%= f.input :address2 %>
  <%= f.input :city %>
  <%= f.input :state, :collection => us_states %>
  <%= f.input :zip %>
  <%= f.input :notes, :input_html => { :class => 'span7', :rows => 3 } %>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
