<h3><%= @client.client_name %></h3>

<table class="table">
  <tr>
    <td><b>Address:</b></td>
    <td>
      <%= @client.address1 %><br/>
      <% if @client.address2? %>
        <%= @client.address2 %><br/>
      <% end %>
      <%= @client.city %>, <%= @client.state %>  <%= @client.zip %><br/>
    </td>
  </tr> 
  
  <tr>
    <td><b>Contact:</b></td>
    <td>
      <%= @client.poc %>
    </td>
  </tr>
  
  <tr>
    <td><b>Email:</b></td>
    <td>
      <%= @client.email %>
    </td>
  </tr>
  
  <tr>
    <td><b>Phone:</b></td>
    <td>
      <%= @client.phone %>
    </td>
  </tr>
  
  <tr>
    <td><b>Notes:</b></td>
    <td>
      <%= @client.notes.gsub(/\n/, '<br/>').html_safe %>
    </td>
  </tr>
   
</table>


<%= link_to 'Edit', edit_client_path(@client) %> |
<%= link_to 'Back', clients_path %>
