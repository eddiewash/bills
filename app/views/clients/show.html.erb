<h3><%= @client.client_name %></h3>

<table class="table">
  <tr>
    <td><b>Address:</b></td>
    <td>
      <%= @client.address.gsub(/\n/, '<br/>').html_safe %>
    </td>
  </tr> 
  
  <tr>
    <td><b>Contact:</b></td>
    <td>
      <%= @client.poc %>
    </td>
  </tr>
  
  <tr>
    <td><b>Email:</b></td>
    <td>
      <%= @client.email %>
    </td>
  </tr>
  
  <tr>
    <td><b>Phone:</b></td>
    <td>
      <%= number_to_phone(@client.phone) %>
    </td>
  </tr>
  
  <tr>
    <td><b>Notes:</b></td>
    <td>
      <%= @client.notes.gsub(/\n/, '<br/>').html_safe %>
    </td>
  </tr>
   
</table>

<%= link_to 'Contacts ', client_contacts_path(@client) %> |
<%= link_to ' Edit ', edit_client_path(@client) %> |
<%= link_to 'Back ', clients_path %>|
<%= link_to ' Delete', client_path(@client), confirm: 'Are you sure you want to delete this client, no take backsies?', method: :delete %>


