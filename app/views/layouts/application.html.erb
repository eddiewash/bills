<!DOCTYPE html>
<html>
<head>
  <title>Bills</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class=<%= background %> >
	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
  			<% if current_user %>
  				<a class= "brand" href="/">InvoiceMe</a>
  			<% else %>
    			<a class= "brand" href="/home">InvoiceMe</a>
  			<% end %>
				<ul class="nav">
  				<% if current_user %>
  					<li><%= link_to "Clients", clients_path %></li>
  					<li><%= link_to "Invoices", invoices_path %></li>
  					<li><%= link_to "Settings", user_company_path(current_user) %></li>					
  				<% else %>
    				<li><%= link_to "About", about_path %></li>
						<li><%= link_to "Contact Us", contact_us_path %></li>

  				<% end %>
				</ul>	
				<ul class="nav pull-right">
				  <% if current_user %>
				    <li><%= link_to current_user.full_name, edit_user_registration_path %></li>
  				  <li><%= link_to "Log Out", logout_path %></li>
				  <% else %>
  				  <li><%= link_to "Register", register_path %></li>
  				  <li><%= link_to "Sign In", signin_path %></li>
				  <% end %>
				  
				</ul>
					
			</div>
		</div>
	</div>
	<div class="container">
	  <% flash.each do |type, message| %>
	    <div class="alert <%= flash_class type%>">
		    <button type="button" class="close" data-dismiss="alert">Ã—</button>
  		  <%= message %>
		  </div>
	  <% end %>
		
		<%= yield %>
	</div>
</body>
</html>
