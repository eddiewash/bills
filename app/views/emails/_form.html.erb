The invoice will be sent to: <%= @invoice.client.email %>
If this not correct, <%= link_to "Click to update the email address", client_path(@invoice.client) %><br/><br/>

<%= simple_form_for [:invoice, @email], html: {class: "form-horizontal"} do |f| %>
  <%= f.error_notification %>
  <%= f.input :subject, :as => "string" %>
  <%= f.input :message, :input_html => { :class => 'span7', :rows => 10 } %>


  <div class="form-actions">
    <%= f.button :submit, "Send Invoice" %>
  </div>
<% end %>