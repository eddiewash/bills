<table class="table table-hover">
  <tr>
    <th>Client</th>
    <th>Job Name</th>
    <th>Service Date</th>
    <th>Invoiced Date</th>
  </tr>

<% invoices.each do |invoice| %>
  <tr data-link="<%= invoice_path(invoice) %>">
    <td><%= invoice.client.client_name %></td>
    <td><%= invoice.job_name %></td>
    <td><%= (invoice.service_date).strftime("%m/%d/%Y") %></td>
    <td><%= (invoice.invoice_date).strftime("%m/%d/%Y") if invoice.invoice_date? %></td>
  </tr>
<% end %>
</table>