<p id="notice"><%= notice %></p>

<p>
  <b>Job name:</b>
  <%= @invoice.job_name %>
</p>

<p>
  <b>Notes:</b><br/>
  <%= @invoice.notes.gsub(/\n/, '<br/>').html_safe %>
</p>

<p>
  <b>Service date:</b>
  <%= @invoice.service_date %>
</p>

<p>
  <b>Total Bill:</b>
  <%= number_to_currency(@balance) %>
</p>

<p>
<b>Items:</b><br/>
<% @invoice.items.each do |i| %>
  <b>Name: </b><%= i.name %>;
  Quantity: <%= i.quantity %>;
  Cost Per Item: <%= i.cost_per%><br/>
<% end %>
</p>

<%= link_to "Printable Receipt (PDF)", invoice_path(@invoice, format: "pdf") %><br/>
<%= link_to 'Send Invoice', email_path(@invoice) %>
<%= link_to 'Edit', edit_invoice_path(@invoice) %> |
<%= link_to 'Back', invoices_path %>
