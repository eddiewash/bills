<%= simple_form_for [:client, @contact], html: {class: "form-horizontal"} do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :phone_work %>
  <%= f.input :phone_cell %>
  <%= f.input :notes, :input_html => { :class => 'span7', :rows => 10 } %>


  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-warning' %>
    <%= link_to 'Cancel', client_path(@client), :class => 'btn' %>
  </div>
<% end %>