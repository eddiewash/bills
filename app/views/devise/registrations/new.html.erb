<div class = "row">
  <div class="span6">

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal well"}) do |f| %>
      <%= f.error_notification %>
  
      <legend><h2>Register</h2></legend>
  
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
  
      <div class="form-actions">
        <div><%= f.button :submit, 'Sign Up' %></div>
      </div>
    <% end %>
  </div>
  


<div class="span6">
  <h2>Welcome to InvoiceMe, we hope you will agree that InoviceMe is the easiest billing app.</h2>
</div>




</div>