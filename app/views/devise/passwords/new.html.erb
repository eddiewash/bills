<div class = "row">
  <div class="span5">
    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post , :class => "well"}) do |f| %>
      <%= devise_error_messages! %>
      <legend><h2>Forgot your password?</h2></legend>

      <%= f.input :email %>
  
      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>

  <div class="span7">
    <h2>No problem, we'll email you a link to get back on.'</h2>
  </div>
</div>