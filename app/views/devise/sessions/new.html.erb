
<div class = "row">
  <div class="span4">
    <%= simple_form_for(resource, :as => resource_name, :html => {class: "well"}, :url => session_path(resource_name)) do |f| %>
      <legend><h2> Sign in </h2></legend>
  
      <%= f.input :email %>
      <%= f.input :password %>
  
      <% if devise_mapping.rememberable? -%>
        <div><%= f.input :remember_me, :as => :boolean %> </div>
      <% end -%>



      <div class="form-actions">
        <%= f.button :submit, "Sign in" %>
      </div>
  
  

    <% end %>

    <%= render "devise/shared/links" %>

  </div>

  <div class="span8 hidden-phone">
    <h2>Welcome back to InvoiceMe</h2>
  </div>
</div>
