<h2>Contact Us</h2>

<%= simple_form_for(@contact_form, :url => send_email_path, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :body, :as => :text, :input_html => { :class => 'span5', :rows => 6 } %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-warning' %>
  </div>
         
<% end %>