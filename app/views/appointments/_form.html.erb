<%= simple_form_for(@invoice, :url => { :controller => "appointments"} ) do |f| %>
  <%= f.error_notification %>
  
  <div class="form-inputs">
    <%= f.input :client_id, collection: current_user.clients.all, label_method: :client_name %>
    <%= f.input :job_name %>
    <%= f.input :appointment_date, :as => "string" %> 
    <%= f.input :notes, :input_html => { :class => 'span6', :rows => 5 } %>
    <%= f.hidden_field :payment_terms %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Set Appointment", :class => 'btn-warning'  %>
    <%= link_to 'Cancel', @invoice, :class => 'btn' %>
  </div>

<% end %>