<h3>Settings</h3>

<h4>Your settings enable you to customize your invoices:</h4>

<div><%= image_tag(@company.logo, :size => "150x150") if @company.logo? %><br/><br/></div>

<table class="table">
  <tr>
    <td><b>Company:</b></td>
    <td>
      <%= @company.name %>
    </td>
  </tr>

  <tr>
    <td><b>Address:</b></td>
    <td>
      <%= @company.address.gsub(/\n/, '<br/>').html_safe %>
    </td>
  </tr> 
  
  <tr>
    <td><b>Email:</b></td>
    <td>
      <%= @company.email %>
    </td>
  </tr>
  
  <tr>
    <td><b>Phone:</b></td>
    <td>
      <%= number_to_phone(@company.phone) %>
    </td>
  </tr>
  
  <tr>
    <td><b>Payment Terms: </b></td>
    <td>
      <%= show_payment_terms(@company.payment_due) %>
    </td>
  </tr>
  <tr>
    <td><b>Tax (%): </b></td>
    <td>
      <%= @company.tax1  %>
    </td>
  </tr>
  <tr>
    <td><b>Tax 2 (%): </b></td>
    <td>
      <%= @company.tax2  %>
    </td>
  </tr>
  
  
  
   
</table>

<%= link_to 'Edit', edit_user_company_path(current_user), :class => 'btn' %>


