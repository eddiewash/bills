<h2>Settings</h2>

<table class="table">
  <tr>
    <td><b>Company:</b></td>
    <td>
      <%= @company.name %>
    </td>
  </tr>

  <tr>
    <td><b>Address:</b></td>
    <td>
      <%= @company.address1 %><br/>
      <% if @company.address2? %>
        <%= @company.address2 %><br/>
      <% end %>
      <%= @company.city %>, <%= @company.state %>  <%= @company.zip %><br/>
    </td>
  </tr> 
  
  <tr>
    <td><b>Email:</b></td>
    <td>
      <%= @company.email %>
    </td>
  </tr>
  
  <tr>
    <td><b>Phone:</b></td>
    <td>
      <%= @company.phone %>
    </td>
  </tr>
  
   
</table>

<%= link_to 'Edit', edit_user_company_path(current_user) %>


